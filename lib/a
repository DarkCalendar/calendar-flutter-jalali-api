import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: DefaultTabController(
        length: 2,
        child: Scaffold(
          appBar: AppBar(
            bottom: TabBar(
              tabs: [
                Tab(icon: Icon(Icons.home), text: 'Home'),
                Tab(icon: Image.asset('assets/img/logo.png'), text: 'Browse'),
              ],
            ),
            title: Text('My App'),
          ),
          body: TabBarView(
            children: [
              Center(child: Text('This is the home page')),
              Center(child: Text('This is the browse page')),
            ],
          ),
        ),
      ),
    );
  }
}